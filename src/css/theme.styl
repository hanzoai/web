.bg
  z-index: -1
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%

  &:before
    content: ''
    background-color: $hanzoIndigo
    position: absolute
    left: 0
    top: 0
    height: 100%
    width 65vw

  &:after
    content: ''
    background-color: $hanzoGreen
    position: absolute
    right: 0
    top: 0
    height: 100%
    width 35vw

  +below($tabletWidth)
    &:before
      width 100vw

    &:after
      width 0vw

.yellow
  color: $amber500

.red
  color: $red500

.green
  color: $green500

.teal
  color: $teal500
