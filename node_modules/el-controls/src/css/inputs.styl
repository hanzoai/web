&
  color: $themeTextColor
  position: relative

&.input.input
.input.input
  width: 100%
  display: table
  margin-bottom: $themeElementPadding

.placeholder
  left: 0
  top: 10px
  position: absolute
  transition: all ($themeTransitionTime * 0.5) linear
  pointer-events: none
  line-height: 1em
  font-weight: normal

// .valid + .placeholder
//   color: $themeGoodColor
.invalid ~ .placeholder
  color: $themeErrorColor

.error
  right: 0
  top: -6px
  position: absolute
  color: $themeErrorColor
  font-size: .75em
  line-height: 1em

input:focus ~ .placeholder
input:hover ~ .placeholder
.placeholder.small
  top: -6px
  font-size: .75em
  line-height: 1em

*:disabled
.disabled
  opacity: 0.5

input
  outline: none
  border: 0
  padding: 0
  background: transparent

  &:-moz-placeholder
    color: $themeTextColor

  &::-moz-placeholder
    color: $themeTextColor

  &:-ms-input-placeholder
    color: $themeTextColor

  &::-webkit-input-placeholder
    color: $themeTextColor

input[type=text]
input[type=password]
  height: $themeElementHeight
  border-bottom: $themeInputBorderWidth solid
  border-color: $themeBorderColor
  border-width: $themeInputBorderWidth
  border-radius: 0
  transition: border-color $themeTransitionTime ease-in-out, color $themeTransitionTime ease-in-out

textarea
  outline: none
  height: $themeElementHeight * 3
  border: $inputBorderWidth solid $borderColor1
  padding: 0 $inputHPadding

input[type=text]
input[type=password]
textarea
  width: 100%
  font-size: 1em
